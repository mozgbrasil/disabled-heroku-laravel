{
    "name":"@mozg/heroku-laravel",
    "description":"Laravel App",
    "keywords":[
        "app.json",
        "laravel",
        "heroku",
        "mozg",
        "brasil"
    ],
    "website":"http://mozg.com.br/",
    "repository":"https://github.com/mozgbrasil/heroku-node",
    "logo":"http://mozg.com.br/assets/images/logos/logo.svg",
    "success_url":"/",
    "scripts":{
        "postdeploy":"echo 'Yo_postdeploy' ; bash app.sh postdeploy >> app.log ; ",
        "pr-predestroy":"echo 'Yo_predestroy' ; bash app.sh teardown >> app.log ; "
    },
    "env": {
        "APP_ENV": {
            "description": "-",
            "value": "local",
            "required": false
        },
        "APP_KEY": {
            "description": "Digite o resultado do prÃ³ximo comando 'php artisan --no-ansi key:generate --show'",
            "required": true
        },
        "APP_DEBUG": {
            "description": "-",
            "value": "true",
            "required": false
        },
        "APP_URL": {
            "description": "-",
            "value": "https://heroku-laravel-mozg.herokuapp.com/",
            "required": true
        },
        "LOG_CHANNEL": {
            "description": "-",
            "value": "stack",
            "required": true
        },
        "DB_CONNECTION": {
            "description": "-",
            "value": "pgsql",
            "required": true
        },
        "DB_HOST": {
            "description": "-",
            "value": "127.0.0.1",
            "required": true
        },
        "DB_PORT": {
            "description": "-",
            "value": "5432",
            "required": true
        },
        "DB_DATABASE": {
            "description": "-",
            "value": "homestead",
            "required": true
        },
        "DB_USERNAME": {
            "description": "-",
            "value": "root",
            "required": true
        },
        "DB_PASSWORD": {
            "description": "-",
            "value": "secret",
            "required": true
        },
        "BROADCAST_DRIVER": {
            "description": "-",
            "value": "log",
            "required": true
        },
        "CACHE_DRIVER": {
            "description": "-",
            "value": "file",
            "required": true
        },
        "QUEUE_CONNECTION": {
            "description": "-",
            "value": "sync",
            "required": true
        },
        "SESSION_DRIVER": {
            "description": "-",
            "value": "file",
            "required": true
        },
        "SESSION_LIFETIME": {
            "description": "-",
            "value": "120",
            "required": true
        },
        "REDIS_HOST": {
            "description": "-",
            "value": "127.0.0.1",
            "required": true
        },
        "REDIS_PASSWORD": {
            "description": "-",
            "value": "null",
            "required": true
        },
        "REDIS_PORT": {
            "description": "-",
            "value": "6379",
            "required": true
        },
        "EMAIL":{
            "description": "-",
            "value": "",
            "required":true
        },
        "SECRET_TOKEN":{
            "description":"A secret key for verifying the integrity of signed cookies.",
            "generator":"secret"
        }
    },
    "image":"heroku/php",
    "addons": [
      "heroku-postgresql:hobby-dev",
      "heroku-redis:hobby-dev"
    ],
    "buildpacks": [
      {
        "url": "heroku/php"
      },
      {
        "url": "heroku/nodejs"
      }
    ],
    "environments":{
        "test":{
            "scripts":{
                "test":"echo 'Yo_environments' ; bash app.sh environments >> app.log ; "
            }
        }
    }
}
