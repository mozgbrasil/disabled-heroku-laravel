{
    "name":"@mozg/heroku-laravel",
    "description":"Laravel App",
    "keywords":[
        "app.json",
        "laravel",
        "heroku",
        "mozg",
        "brasil"
    ],
    "website":"http://mozg.com.br/",
    "repository":"https://github.com/mozgbrasil/heroku-node",
    "logo":"http://mozg.com.br/assets/images/logos/logo.svg",
    "success_url":"/",
    "scripts":{
        "postdeploy":"echo 'Yo_postdeploy' ; bash app.sh postdeploy >> app.log ; ",
        "pr-predestroy":"echo 'Yo_predestroy' ; bash app.sh teardown >> app.log ; "
    },
    "env": {
        "APP_ENV": {
            "description": "Digite 'local'",
            "required": false
        },
        "APP_KEY": {
            "description": "Digite o resultado do prÃ³ximo comando 'php artisan --no-ansi key:generate --show'",
            "required": true
        },
        "APP_DEBUG": {
            "description": "Digite 'true'",
            "required": false
        },
        "APP_URL": {
            "description": "Digite 'https://murphy.herokuapp.com/'",
            "required": true
        },
        "CACHE_DRIVER": {
            "description": "-",
            "value": "5",
            "required": true
        },
        "QUEUE_DRIVER": {
            "description": "-",
            "value": "5",
            "required": true
        },
        "SESSION_DRIVER": {
            "description": "-",
            "value": "5",
            "required": true
        },
        "EMAIL":{
            "description": "-",
            "value": "0@0.com",
            "required":true
        },
        "SECRET_TOKEN":{
            "description":"A secret key for verifying the integrity of signed cookies.",
            "generator":"secret"
        }
    },
    "image":"heroku/php",
    "addons": [
      "heroku-postgresql:hobby-dev",
      "heroku-redis:hobby-dev"
    ],
    "buildpacks": [
      {
        "url": "heroku/php"
      },
      {
        "url": "heroku/nodejs"
      }
    ],
    "environments":{
        "test":{
            "scripts":{
                "test":"echo 'Yo_environments' ; bash app.sh environments >> app.log ; "
            }
        }
    }
}
